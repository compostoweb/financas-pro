// Estrutura do Banco de Dados
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["views"]
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Seus Models ---

enum TransactionType {
  RECEITA_EMPRESA
  DESPESA_EMPRESA
  DESPESA_SOCIO
}

enum TransactionStatus {
  EM_ABERTO
  PAGO
  ATRASADO
}

model Transaction {
  id           String   @id @default(uuid())
  description  String
  amount       Decimal
  dueDate      DateTime
  type         TransactionType
  status       TransactionStatus @default(EM_ABERTO)
  category     String?
  
  // Campo Novo
  recurrenceId String?

  // Campos Antigos (Que precisam voltar para não quebrar a View)
  attachmentUrl String?
  paymentDate   DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Adicione isso no final do arquivo
view UnifiedTransactions {
  id            String   @unique // Views precisam de um campo único para o Prisma se achar
  description   String
  amount        Decimal  @db.Decimal(10, 2)
  dueDate       DateTime
  paymentDate   DateTime?
  status        TransactionStatus
  type          TransactionType
  attachmentUrl String?
  createdAt     DateTime
}

model Category {
  id        String   @id @default(uuid())
  name      String
  color     String   @default("#64748b") // Cor padrão (Cinza)
  createdAt DateTime @default(now())
}