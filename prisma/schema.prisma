// Estrutura do Banco de Dados
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["views"]
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- AUTENTICAÇÃO ---

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?   // Para email/senha (hashed com bcrypt)

  accounts      Account[]
  sessions      Session[]
  transactions  Transaction[] @relation("UserTransactions")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([email])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  user               User    @relation(fields: [userId], onDelete: Cascade)
  type               String
  provider           String  // "google", "credentials"
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], onDelete: Cascade)
  expires      DateTime

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- MODELOS DE NEGÓCIO ---

enum TransactionType {
  RECEITA_EMPRESA
  DESPESA_EMPRESA
  DESPESA_SOCIO
}

enum TransactionStatus {
  EM_ABERTO
  PAGO
  ATRASADO
}

model Transaction {
  id           String   @id @default(uuid())
  userId       String   // Novo: Vincular ao usuário
  user         User     @relation("UserTransactions", fields: [userId], onDelete: Cascade)
  description  String
  amount       Decimal
  dueDate      DateTime
  type         TransactionType
  status       TransactionStatus @default(EM_ABERTO)
  category     String?
  
  // Campo Novo
  recurrenceId String?

  // Campos Antigos (Que precisam voltar para não quebrar a View)
  attachmentUrl String?
  paymentDate   DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
  @@index([dueDate])
}

// Adicione isso no final do arquivo
view UnifiedTransactions {
  id            String   @unique // Views precisam de um campo único para o Prisma se achar
  description   String
  amount        Decimal  @db.Decimal(10, 2)
  dueDate       DateTime
  paymentDate   DateTime?
  status        TransactionStatus
  type          TransactionType
  attachmentUrl String?
  createdAt     DateTime
}

model Category {
  id        String   @id @default(uuid())
  name      String
  color     String   @default("#64748b")
  budget    Decimal  @default(0)
  scope     String   @default("BOTH") // VALUES: "COMPANY", "PARTNER", "BOTH"
  createdAt DateTime @default(now())
}

// Vamos criar uma tabela de Configurações para salvar os impostos
model Settings {
  id              String @id @default("global")
  taxRegime       String @default("SIMPLES") // SIMPLES, PRESUMIDO, REAL
  
  // Alíquotas (%)
  pisCofinsRate   Decimal @default(3.65) // Padrão Presumido Cumulativo
  irpjRate        Decimal @default(15)
  csllRate        Decimal @default(9)
  issRate         Decimal @default(5)
  simplesRate     Decimal @default(6) // Alíquota efetiva média
  
  // Reforma Tributária 2026 (Piloto: 0.9% CBS + 0.1% IBS)
  use2026Transition Boolean @default(false) 
}